@{
    ViewData["Title"] = "Регистрация";
}

@using (Html.BeginForm("Login", "Form", null, FormMethod.Post, true,
new { role = "form col-sm-10" }))
{
    <h2>Вход</h2>
    <div class="form-group">
        <h4>Имя</h4>
        <input type="text" value="Vadim" name="FirstName" class="form-control col-sm-2" />
    </div>
    <div class="form-group">
        <h4>Фамилия</h4>
        <input type="text" value="Guber" name="LastName" class="form-control col-sm-2" />
    </div>
    <br />
    <div class="form-group">
        <button class="btn-outline-primary form-control col-sm-2">Войти</button>
    </div>
}


